{
    "compilerOptions":{
        "declaration":true,
        "declarationDir":"./dist/types",
        "jsx":"preserve",
        "target": "esnext",
        "module": "esnext",
        "strict": false,
        "moduleResolution": "node",
        
        "baseUrl": "./"  ,// 解析非相对模块的基础地址，默认是当前目录
        "paths":{ // 路径映射，相对于baseUrl
            "@/*": ["src/*"]
    }
    },
    "include":[
        "./**/*.*",
        "./shims-vue.d.ts", "docs/.vitepress/config.ts",
    ],
    "exclude":[
        "node_modules"
    ],
    "esModuleInterop":true,
    "allowSyntheticDefaultImports":true
}